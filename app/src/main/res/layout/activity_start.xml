<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ProgressBar
        android:id="@+id/start_activity_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/splash_logo_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/splash_screen_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_400"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_50"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:src="@drawable/ic_logo_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/app_logo_title"
            style="@style/text_orange_35sp_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/splash_screen_photo"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="@string/business_chat" />

        <TextView
            style="@style/text_orange_25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_logo_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="@string/reach_every_one"
            android:textAlignment="center" />
    </RelativeLayout>

</RelativeLayout>