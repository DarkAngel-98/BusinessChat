<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.businesscards.chat.CommunicationFragment" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/communication_fragment_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChatUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_20" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/communication_fragment_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/custom_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/orange">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/communication_profile_picture"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_16"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/dimen_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_toEndOf="@id/communication_profile_picture"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/users_name"
                        style="@style/text_white_20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/users_surname"
                        style="@style/text_white_20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/bottom_type_layout"
                android:layout_below="@id/custom_toolbar"
                android:layout_marginHorizontal="@dimen/dimen_16" />

            <RelativeLayout
                android:id="@+id/bottom_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@color/orange"
                android:paddingHorizontal="@dimen/dimen_10">

                <EditText
                    android:id="@+id/send_message"
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:hint="@string/type_message" />

                <ImageView

                    android:id="@+id/icon_send"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:src="@drawable/ic_send" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>